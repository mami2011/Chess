
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Hibernate session factory -->
	<bean id="imageDao" class="com.vendertool.inventory.dal.image.ImageDaoImpl">
		<property name="sessionFactory" ref="invdbSessionFactory"></property>
	</bean>
	
	<bean id="productDao" class="com.vendertool.inventory.dal.product.ProductDaoImpl">
		<property name="sessionFactory" ref="invdbSessionFactory"></property>
	</bean>
	
	<bean id="productAttributeDao" class="com.vendertool.inventory.dal.productAttribute.ProductAttributeDaoImpl">
		<property name="sessionFactory" ref="invdbSessionFactory"></property>
	</bean>
	
	<bean id="productVariationDao" class="com.vendertool.inventory.dal.productVariation.ProductVariationDaoImpl">
		<property name="sessionFactory" ref="invdbSessionFactory"></property>
	</bean>
	
</beans>