        <property name="subject" value="NutPeddler Password Chnage request"/>
        <property name="messageBody" value="Dear NutPeddler - Your Password has chnaged sucessfull. Dream Big and we can make it happen together. "/>
    </bean>
    
         <!--profile Change Message pre-configured message -->
