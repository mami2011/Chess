<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
 
 
http://www.springframework.org/schema/context
 
 
http://www.springframework.org/schema/context/spring-context-3.0.xsd">
 
    <context:component-scan base-package="com.kryptonite.email" />    
     
    <!-- SET default mail properties -->
    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="smtp.gmail.com"/>
        <property name="port" value="587"/>
        <property name="username" value="nutped2014@gmail.com"/>
        <property name="password" value="nutped123"/>
        <property name="javaMailProperties">
            <props>
                <prop key="mail.transport.protocol">smtp</prop>
                <prop key="mail.smtp.auth">true</prop>
                <prop key="mail.smtp.starttls.enable">true</prop>
               <!--  <prop key="mail.debug">true</prop> -->
            </props>
        </property>
    </bean>
    
    <!--registration welcome Message pre-configured message -->
    <bean id="registrationMessage" class="org.springframework.mail.SimpleMailMessage">
        <property name="from" value="nutped2014@gmail.com"></property>
        <property name="subject" value="Registration - Thank you registering to NutPeddler !!"/>
        <property name="messageBody" value="Dear NutPeddler - Thank you for registering to NutPeddler. Dream Big and we can make it happen together. "/>
    </bean>
    
    <!--password Change Message pre-configured message -->
