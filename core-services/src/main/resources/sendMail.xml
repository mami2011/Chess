        <property name="from" value="nutped2014@gmail.com"></property>
        <property name="subject" value="NutPeddler Password Chnage request"/>
        <property name="messageBody" value="Dear NutPeddler - Your Profile has chnaged sucessfull. Dream Big and we can make it happen together. "/>
    </bean>
    
      <!--password Change Message pre-configured message -->
    <bean id="newPasswordMessage" class="org.springframework.mail.SimpleMailMessage">
        <property name="from" value="nutped2014@gmail.com"></property>
        <property name="subject" value="NutPeddler New Password"/>
        <property name="messageBody" value="Dear NutPeddler - Your new Password is:  . Dream Big and we can make it happen together. "/>
